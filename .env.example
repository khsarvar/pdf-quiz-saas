# This is an example of your .env file format, which pnpm db:setup will create.
# Note: this must be .env, not .env.local, without further configuration changes.

# Database
POSTGRES_URL=postgresql://postgres:password@localhost:5432/saas_starter

# Stripe
STRIPE_SECRET_KEY=sk_test_***
STRIPE_WEBHOOK_SECRET=whsec_***

# Application
BASE_URL=http://localhost:3000
AUTH_SECRET=your-jwt-secret-key-here
NEXT_SERVER_ACTIONS_BODY_SIZE_LIMIT=50mb
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# OpenAI
OPENAI_API_KEY=sk-***
OPENAI_MODEL=gpt-5-nano

# Cloudflare R2 Storage
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=your-bucket-name
R2_PUBLIC_URL=https://your-bucket.r2.dev

# AWS Configuration (for ECS/SQS deployment)
AWS_REGION=us-east-1
SQS_DOCUMENT_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/xxx/document-processing.fifo
SQS_QUIZ_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/xxx/quiz-generation.fifo
SQS_DOCUMENT_QUEUE_NAME=document-processing
SQS_QUIZ_QUEUE_NAME=quiz-generation
