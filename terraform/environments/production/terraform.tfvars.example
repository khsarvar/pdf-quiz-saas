# Production Environment Configuration
# Copy this file to terraform.tfvars (local only, do not commit) and fill in values.

aws_region   = "us-east-2"
project_name = "saas-starter-v2"
environment  = "prod2"

# VPC Configuration
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["us-east-2a", "us-east-2b"]

# RDS Configuration
db_instance_class = "db.t3.medium"
db_name           = "saas_starter"
db_username       = "postgres"
db_multi_az       = true

# Database URL for ECS tasks (set in local file or via TF_VAR_postgres_url)
postgres_url = ""

# ECS Configuration
web_cpu           = 512
web_memory        = 1024
web_desired_count = 2

worker_cpu           = 512
worker_memory        = 1024
worker_desired_count = 1

# Domain Configuration (update with your domain)
# domain_name         = "app.example.com"
acm_certificate_arn = ""

# Application secrets should be passed via environment variables
# (TF_VAR_stripe_secret_key, TF_VAR_openai_api_key, etc.) or an ignored secrets file.
